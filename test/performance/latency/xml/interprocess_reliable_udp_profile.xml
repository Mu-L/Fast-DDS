                    <allocated_samples>11000</allocated_samples>
                    <!-- <extra_samples>1</extra_samples> -->
                </resourceLimitsQos>
            </topic>
            <times>
                <heartbeat_period>
                    <nanosec>10000000</nanosec>
                </heartbeat_period>
            </times>
            <qos>
                <disablePositiveAcks>
                    <enabled>false</enabled>
                    <duration>
                        <sec>5</sec>
                    </duration>
                </disablePositiveAcks>
                <disable_heartbeat_piggyback>false</disable_heartbeat_piggyback>
                <reliability>
