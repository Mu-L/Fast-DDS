<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com">
    <profiles>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>udp_transport</transport_id>
                <type>UDPv4</type>
                <interfaceWhiteList>
                    <address>127.0.0.1</address>
                </interfaceWhiteList>
            </transport_descriptor>
        </transport_descriptors>
        <!-- PUBLISHER -->
        <participant profile_name="pub_participant_profile">
            <domainId>231</domainId>
            <rtps>
                <name>latency_test_publisher</name>
                <useBuiltinTransports>false</useBuiltinTransports>
                <userTransports>
                    <transport_id>udp_transport</transport_id>
                </userTransports>
            </rtps>
        </participant>
        <data_writer profile_name="pub_publisher_profile">
            <topic>
                <historyQos>
                    <kind>KEEP_ALL</kind>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>40000</max_samples>
                    <!-- <max_instances>10</max_instances> -->
                    <max_samples_per_instance>40000</max_samples_per_instance>
                    <allocated_samples>11000</allocated_samples>
                    <!-- <extra_samples>1</extra_samples> -->
                </resourceLimitsQos>
            </topic>
            <times>
                <heartbeat_period>
                    <nanosec>10000000</nanosec>
                </heartbeat_period>
            </times>
            <qos>
                <disablePositiveAcks>
                    <enabled>false</enabled>
                    <duration>
                        <sec>5</sec>
                    </duration>
                </disablePositiveAcks>
                <disable_heartbeat_piggyback>false</disable_heartbeat_piggyback>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
                <data_sharing>
                    <kind>OFF</kind>
                </data_sharing>
            </qos>
        </data_writer>
        <data_reader profile_name="pub_subscriber_profile">
            <topic>
                <historyQos>
                    <kind>KEEP_ALL</kind>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>40000</max_samples>
                    <!-- <max_instances>10</max_instances> -->
                    <max_samples_per_instance>40000</max_samples_per_instance>
                    <allocated_samples>11000</allocated_samples>
                    <!-- <extra_samples>1</extra_samples> -->
                </resourceLimitsQos>
            </topic>
            <qos>
                <disablePositiveAcks>
                    <enabled>false</enabled>
                </disablePositiveAcks>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <durability>
                    <kind>VOLATILE</kind>
                </durability>
                <data_sharing>
                    <kind>OFF</kind>
                </data_sharing>
            </qos>
        </data_reader>

        <!-- SUBSCRIBER -->
        <participant profile_name="sub_participant_profile">
            <domainId>231</domainId>
            <rtps>
                <name>latency_test_subscriber</name>
                <useBuiltinTransports>false</useBuiltinTransports>
